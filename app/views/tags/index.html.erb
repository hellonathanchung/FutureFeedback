<header>
  <h2>Tag Administration Dashboard</h2>
  <em>Mostly unlimited power</em>
</header>

<main class='flow'>

  <%= form_with model: Tag.new, local: true do |f| %>
    <div class='form__field flow-left'>
      <%= f.text_field :name, placeholder: 'Create a new tag by name' %>
      <div class='form__actions'><%= f.submit 'Create tag' %></div>
    </div>
  <% end %>

  <%= form_with url: tags_path, method: :get, local: true do |f| %>
    <div class='form__field flow-left'>
      <%= f.text_field :search, placeholder: 'Search tags by name' %>
      <div class='form__actions'><%= f.submit 'Search' %></div>
      <%= link_to 'Clear Search', tags_path %>
    </div>
  <% end %>

  <div class='grid gg1 grid-4'>
    <%= render(@tags) || 'There are no existing tags.' %>
  </div>
</main>
