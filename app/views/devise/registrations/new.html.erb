<main class='flex flex-center flex-col'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-center flex-col flow min-w-30 min-h-50'}) do |f| %>
    <h1>Welcome to Future Feedback!</h1>
    <h2>Please create an account:</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class='form__field flex flex-center flex-col'>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class='form__field flex flex-center flex-col'>
      <% password_string = 'Password' %>
      <% password_string += " (#{@minimum_password_length} characters minimum)" if @minimum_password_length %>
      <%= f.label :password, password_string %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class='form__field flex flex-center flex-col'>
      <%= f.label :password_confirmation, 'Confirm password' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class='form__actions'>
      <%= f.submit 'Create Account', class: 'bg-blue clr-white' %>
    </div>

    <%= render 'devise/shared/links' %>
  <% end %>
</main>

