<div class='card px-r-3'>
  <div class='card__header'>
    <img src=<%= post.user.gravatar_url %> class='border'>
  </div>
  <div class='card__content bg-blue clr-dark-purple flow'>
    <h4><%= link_to truncate(post.title, length: 30), post, class: 'clr-yellow' %></h4>
    <p><%= link_to post.user.username, user_path(post.user.username), class: 'clr-yellow' %></p>
    <p class='flow-left'>
      <%= content_tag :span, "+ #{post.get_upvotes.size}", class: 'clr-upvote-inactive' %>
      <%= content_tag :span, "- #{post.get_downvotes.size}", class: 'clr-downvote-inactive' %>
      <%= content_tag :span, "#{post.comments.size} comments", class: 'clr-dark-purple' %>
      </p>
  </div>
</div>
