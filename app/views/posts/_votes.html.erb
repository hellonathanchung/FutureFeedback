<div class='flex flex-center flex-start flow-left'>
  <%= link_to '+', like_post_path(post), method: :put, class: 'upvote' %> <%= content_tag :div, post.get_upvotes.size, class: 'upvote' %>
  <%= link_to '-', dislike_post_path(post), method: :put, class: 'downvote' %> <%= content_tag :div, post.get_downvotes.size, class: 'downvote' %>
</div>
