<div class='card ds-blue bg-light-purple border'>
  <div class='card__content'>
  </div>


<% if !!flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= @post.status %>

<%= form_with model: @post, local: true  do |f| %> 
  <div class='card__content'>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>

  <div class='card__content'>
    <%= f.label :content %> <br>
    <%= f.text_area :content %>
  </div>

  <div class='card__content'>
    <%= f.label :tag %> <br>
    <%= f.collection_select :tag_id, Tag.all, :id, :name %> <br>
</div>
    <%= f.submit %>
<% end %>
