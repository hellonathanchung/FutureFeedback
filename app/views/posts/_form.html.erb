<% if !!flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @model, local: true  do |f| %> 

    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    
    <%= f.label :content %>
    <%= f.text_area :content %> <br>

    <%= f.label :tag %>
    <%= f.collection_select :tag_id, Tag.all, :id, :name %> <br>

    <%= f.submit %>

    <% end %>